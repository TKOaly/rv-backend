{
  "name": "rv-backend",
  "version": "0.1.0",
  "description": "RV backend",
  "private": true,
  "scripts": {
    "start": "node ./src/server.js",
    "start-nodemon": "nodemon ./src/server.js",
    "db-rollback": "knex migrate:rollback",
    "db-migrate": "knex migrate:latest",
    "db-seed": "knex seed:run",
    "test": "nyc --reporter=lcov mocha --exit",
    "lint-js": "eslint src/**/*.js",
    "fix-js": "eslint --fix src/**/*.js",
    "start-container": "docker-compose build && docker-compose up -d db && docker-compose up -d rv-backend",
    "stop-container": "docker-compose down",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cors": "^2.8.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "pg": "^7.11.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.3.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "git add"
    ]
  }
}
