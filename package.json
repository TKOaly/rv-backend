{
  "name": "rv-backend",
  "version": "0.1.0",
  "description": "RV backend",
  "private": true,
  "scripts": {
    "start": "node ./src/server.js",
    "start-nodemon": "nodemon ./src/server.js",
    "db-rollback": "knex migrate:rollback",
    "db-migrate": "knex migrate:latest",
    "db-seed": "knex seed:run",
    "test": "nyc --reporter=lcov mocha --exit",
    "lint-js": "eslint src/**/*.js",
    "fix-js": "eslint --fix src/**/*.js",
    "start-container": "docker-compose build && docker-compose up -d db && docker-compose up -d rv-backend",
    "stop-container": "docker-compose down"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.1",
    "pg": "^7.12.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint",
      "git add"
    ]
  }
}
