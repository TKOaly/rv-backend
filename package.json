{
    "name": "rv_user_service",
    "version": "0.1.0",
    "description": "RV user service",
    "private": true,
    "scripts": {
        "start": "node ./src/server.js",
        "start-nodemon": "nodemon ./src/server.js",
        "db-rollback": "knex migrate:rollback",
        "db-migrate": "knex migrate:latest",
        "db-seed": "knex seed:run",
        "test": "nyc --reporter=lcov mocha --exit -R spec",
        "lint-js": "eslint src/**/*.js",
        "fix-js": "eslint --fix src/**/*.js",
        "start-container": "docker-compose build && docker-compose up -d db && docker-compose up -d rv-backend",
        "stop-container": "docker-compose down",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "bcrypt": "^1.0.3",
        "body-parser": "^1.18.2",
        "cors": "^2.8.4",
        "express": "^4.16.1",
        "jsonwebtoken": "^8.1.0",
        "knex": "^0.14.2",
        "pg": "^7.4.1"
    },
    "devDependencies": {
        "chai": "^4.1.2",
        "chai-http": "^3.0.0",
        "eslint": "^4.17.0",
        "husky": "^0.14.3",
        "lint-staged": "^7.0.0",
        "mocha": "^4.1.0",
        "nodemon": "^1.15.1",
        "nyc": "^11.4.1",
        "sqlite3": "^3.1.13"
    },
    "lint-staged": {
        "src/**/*.js": [
            "eslint",
            "git add"
        ]
    }
}
