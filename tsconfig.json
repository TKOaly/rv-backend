{
	"compilerOptions": {
		"outDir": "./built",
		"allowJs": true,
		"lib": ["es2023"],
		"module": "Node16",
		"target": "ES2022",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node16"
	},
	"include": ["./src/**/*", "./test/**/*"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
